<Project>

    <PropertyGroup>
        <!-- Polyfill $(SolutionDir) -->
        <SolutionDir Condition="'$(SolutionDir)' == ''">$(MSBuildThisFileDirectory)</SolutionDir>
    </PropertyGroup>

    <!-- Convert $(BLLUseLocalNugetPackages) to bool -->
    <PropertyGroup>
        <BLLUseLocalNugetPackages Condition="'$(BLLUseLocalNugetPackages)' == ''">true</BLLUseLocalNugetPackages>
    </PropertyGroup>

</Project>
